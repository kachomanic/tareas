<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :state %>
    
    <div class="control-group">
        <%= f.label :cate_id, class: 'control-group' %>
  
        <%= f.collection_select :cate_id, Cate.all, :id, :nombre, { prompt: "Choose a category" }, class: "browser-default" %>
    </div>

    <div class="control-group">
        <%= f.label :user_id, class: 'control-group' %>
  
        <%= f.collection_select :user_id, User.all, :id, :email, { prompt: "Choose an user" }, class: "browser-default" %>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
